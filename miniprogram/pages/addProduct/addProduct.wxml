<!--miniprogram/pages/addProduct/addProduct.wxml-->
<form>
  <view class="cu-form-group margin-top">
    <view class="title">产品类别</view>
    <picker bindchange="pickerChange" value="{{index}}" range="{{picker}}">
      <view class="picker">
        {{index?picker[index]:'请选择'}}
      </view>
    </picker>
  </view>

  <view class="cu-form-group">
    <view class="title">产品名称</view>
    <input bindinput="bindProductNameInput" style="text-align: right;" placeholder="请输入产品名称" value='{{nameInput}}'></input>
  </view>

  <view class="cu-form-group">
    <view class="title">产品描述</view>
    <input bindinput="bindProductDescribeInput" style="text-align: right;" placeholder="请对产品进行描述" value='{{describeInput}}'></input>
  </view>

  <view class="cu-form-group">
    <view class="title">产品价格</view>
    <input bindinput="bindProductPriceInput" type='digit' style="text-align: right;" placeholder="请输入产品价格" value='{{priceInput}}'></input>
    <text>元</text>
  </view>

  <view class="cu-bar bg-white margin-top">
    <view class="action">
      图片上传
    </view>
    <view class="action">
      {{imgList.length}}/1
    </view>
  </view>
  <view class="cu-form-group">
    <view class="grid col-2 grid-square flex-sub">
      <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="viewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="delImg" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="chooseImage" wx:if="{{imgList.length<1}}">
        <text class="cuIcon-cameraadd"></text>
      </view>
    </view>
  </view>

  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="primary" wx:if="{{isComplete}}" bindtap='onSubmit'>确认并提交</button>
    <button class="weui-btn" type="primary" disabled="true" wx:if="{{!isComplete}}">确认并提交</button>
  </view>
</form>